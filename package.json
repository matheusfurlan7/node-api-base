{
  "name": "node-api-base",
  "version": "1.0.0",
  "description": "Basic API created in NodeJs with TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier . --write",
    "dev": "nodemon --watch 'src/**/*.*' --exec 'tsx' src/index.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,js,json}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{ts,js}": [
      "vitest run --silent"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheusfurlan7/node-api-base.git"
  },
  "author": "Matheus Furlan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matheusfurlan7/node-api-base/issues"
  },
  "homepage": "https://github.com/matheusfurlan7/node-api-base#readme",
  "dependencies": {
    "fastify": "^5.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.2.3"
  }
}
